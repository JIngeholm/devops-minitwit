<!DOCTYPE html>
@{
var userName = User.FindFirst("Name")?.Value ?? "User";
}
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class="page">
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
    <div class="navigation">
        @if (User.Identity?.IsAuthenticated == true) // Displays authenticated user's navigation
        {
            <div style="display: flex; gap: 10px; align-items: center;">
                <a href="/@(userName)">My timeline</a> |
                <a href="/">Public timeline</a> |
                <partial name="_LoginPartial"/>
            </div>
        }
        else // Displays unauthenticated user's navigation
        {
            <div style="display: flex; gap: 10px; align-items: center;">
                <a href="/">Public timeline</a> |
                <partial name="_LoginPartial" />
            </div>
        }
    </div>
    <div class="body">
        @RenderBody()
    </div>
    <div class="footer">
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
